<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="50dp"
            android:background="@drawable/border"
            >

            <ImageView
                android:id="@+id/imgPoster"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="250dp"
                android:textAlignment="center"
                android:textSize="10dp"
                android:text="Category"
                android:fontFamily="@font/poppinsmedium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgPoster"
                />

            <TextView
                android:id="@+id/txtJudul"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="30dp"
                android:text="Judul"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgPoster" />

            <TextView
                android:id="@+id/txtBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Brand"
                app:layout_constraintStart_toStartOf="@+id/txtJudul"
                app:layout_constraintTop_toBottomOf="@+id/txtJudul" />


            <TextView
                android:id="@+id/txtDeskripsi"
                android:layout_width="305dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppinsmedium"
                android:text="Deskripsi"
                android:textSize="12dp"
                android:layout_marginStart="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtBrand" />

            <Button
                android:id="@+id/btnPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="Price"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="11dp"
                android:backgroundTint="#F2F1E9"
                android:textColor="#000000"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtDeskripsi"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/Rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginBottom="-13dp"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="12dp"
                android:text="0"
                app:layout_constraintBottom_toTopOf="@+id/RatingBar"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="12dp"
                android:text="/ 5"
                android:layout_marginStart="7dp"
                android:layout_marginBottom="-13dp"
                app:layout_constraintBottom_toTopOf="@+id/RatingBar"
                app:layout_constraintStart_toEndOf="@+id/Rating" />

            <RatingBar
                android:id="@+id/RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progressBackgroundTint="@color/Grey"
                android:progressTint="@color/Gold"
                android:scaleX="0.35"
                android:scaleY="0.35"
                android:numStars="5"
                android:stepSize="0.1"
                android:layout_marginTop="40dp"
                android:layout_marginStart="-110dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnPrice"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtDeskripsi" />

            <TextView
                android:id="@+id/Disc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="28dp"
                android:textColor="@color/Red"
                android:text="Disc"
                android:textSize="10dp"
                android:fontFamily="@font/poppinsmedium"
                app:layout_constraintBottom_toTopOf="@+id/btnPrice"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/Stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="stock"
                android:textSize="10dp"
                android:layout_marginEnd="43dp"
                android:fontFamily="@font/poppinsmedium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnPrice" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>